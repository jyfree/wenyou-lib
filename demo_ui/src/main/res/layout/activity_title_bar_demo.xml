<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wenyou.yuilibrary.widget.actionbar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#5A9AEF"
        app:tb_actionPadding="20dp"
        app:tb_barHeight="65dp"
        app:tb_dividerColor="#F15C58"
        app:tb_leftImageResource="@drawable/demo_icon_back_white"
        app:tb_leftText="回退"
        app:tb_sideTextPadding="20dp"
        app:tb_subTitleText="这是副标题"
        app:tb_titleText="这是一个Title" />


    <com.wenyou.yuilibrary.widget.actionbar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:tb_leftImageResource="@drawable/demo_icon_back_white"
        app:tb_leftText="返回"
        app:tb_titleText="这是一个Title"
        android:background="#FF6100"/>


    <com.wenyou.yuilibrary.widget.actionbar.TitleBar
        android:id="@+id/titlebar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:tb_actionPadding="20dp"
        app:tb_centerGravity="left"
        app:tb_leftImageResource="@drawable/demo_icon_back_white"
        app:tb_titleText="这是一个Title"
        android:background="#EF5362"/>


    <com.wenyou.yuilibrary.widget.actionbar.TitleBar
        android:id="@+id/titlebar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:tb_actionPadding="20dp"
        app:tb_centerGravity="left"
        app:tb_titleText="这是一个Title"
        android:background="#3FD0AD"/>


</LinearLayout>